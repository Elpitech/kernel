/*
 * Elpitech Baikal-M EM407 module device tree
 *
 */

/dts-v1/;

#include "bm1000.dtsi"

/ {

	model = "Elpitech Baikal-M EM407 board";
	compatible = "baikal,baikal-m";
	#address-cells = <2>;
	#size-cells = <2>;

	aliases {
		ethernet0 = &gmac0;
		ethernet1 = &gmac1;
	};

	chosen { };

	panel {
		compatible = "panel-lvds";
		width-mm = <223>;
		height-mm = <125>;
		data-mapping = "vesa-24";
		enable-gpios = <&porta 0 GPIO_ACTIVE_HIGH>;
		panel-timing {
		// 1920x1080 @60Hz
			clock-frequency = <148500000>;
			hactive = <1920>;
			vactive = <1080>;
			hsync-len = <44>;
			hfront-porch = <88>;
			hback-porch = <148>;
			vsync-len = <5>;
			vfront-porch = <4>;
			vback-porch = <36>;
		};
		port {
			#address-cells = <1>;
			#size-cells = <0>;
			panel0_lvds0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&vdu_lvds0_pads>;
			};
			panel0_lvds1: endpoint@1 {
				reg = <1>;
				remote-endpoint = <&vdu_lvds1_pads>;
			};
		};
	};

	sfp0: sfp0 {
		compatible = "sff,sfp";
		i2c-bus = <&sfp_i2c0>;
//???		mod-def0-gpios = <&porta 19 GPIO_ACTIVE_LOW>;
	};
	sfp1: sfp1 {
		compatible = "sff,sfp";
		i2c-bus = <&sfp_i2c1>;
//???		mod-def0-gpios = <&porta 20 GPIO_ACTIVE_LOW>;
	};
	phy_sfp0: xphy0 {
		compatible = "ethernet-phy-ieee802.3-c45";
		amd,speed-set = <0>;
		sfp = <&sfp0>;
	};
	phy_sfp1: xphy1 {
		compatible = "ethernet-phy-ieee802.3-c45";
		amd,speed-set = <0>;
		sfp = <&sfp1>;
	};
};

&uart0 {
	status = "okay";
};

&uart1 {
	status = "okay";
};

&sata0 {
	status = "okay";
};

&sata1 {
	status = "okay";
};

&gmac0 {
	status = "okay";
	clk_csr = <0x3>;
	phy-mode = "rgmii-id";
	phy-handle = <&gmac0_phy>;
};

&mdio0 {
	gmac0_phy: ethernet-phy@3 {
		compatible = "micrel,ksz9031", "ethernet-phy-id0022.1620", "ethernet-phy-ieee802.3-c22";
		reg = <0x3>;
		txd0-skew-ps = <0>;
		txd1-skew-ps = <0>;
		txd2-skew-ps = <0>;
		txd3-skew-ps = <0>;
		txc-skew-ps  = <0xff>;
	};
};

&xgmac0 {
	status = "okay";
	phy-handle = <&phy_sfp0>;
	phy-mode = "10gbase-kr";
	dma-coherent;
};

&xgmac1 {
	status = "okay";
	phy-handle = <&phy_sfp1>;
	phy-mode = "10gbase-kr";
	dma-coherent;
};

&vdu0 {
	status = "okay";
	num-lanes = <2>;
	port {
		#address-cells = <1>;
		#size-cells = <0>;
		vdu_lvds0_pads: endpoint@0 {
			reg = <0>;
			remote-endpoint = <&panel0_lvds0>;
		};
		vdu_lvds1_pads: endpoint@1 {
			reg = <1>;
			remote-endpoint = <&panel0_lvds1>;
		};
	};
};

&hdmi {
	status = "okay";
};

&vdu1 {
	status = "okay";
};

&gpio32 {
	status = "okay";
};

&usb2 {
	status = "okay";
};

&usb3 {
	status = "okay";
};

&pcie_lcru {
	status = "okay";
};

&pcie0 {
	status = "okay";
};

&pcie1 {
	status = "okay";
};

&pcie2 {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&timer3 {
	status = "okay";
};

&timer4 {
	status = "okay";
};

&pvt_ca57_0 {
	status = "okay";
};

&pvt_ca57_1 {
	status = "okay";
};

&pvt_ca57_2 {
	status = "okay";
};

&pvt_ca57_3 {
	status = "okay";
};

&pvt_mali {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";

	i2c-mux@70 {
		compatible = "nxp,pca9545";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x70>;

		i2c@0 { /* EC_I2C */
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0>;

			bmc@8 {
				compatible = "tp,mitx2-bmc", "t-platforms,mitx2-bmc";
				reg = <0x08>;
			};

			gpio@50 {
				compatible = "nxp,pca9670";
				#gpio-cells = <2>;
				gpio-controller;
				reg = <0x50>;
			};

			rtc@51 {
				compatible = "nxp,pcf2129", "nxp,pcf2127";
				reg = <0x51>;
			};

			hwmon@52 {
				compatible = "tp,bm_mitx_hwmon";
				reg = <0x52>;
			};

			eeprom@53 {
				compatible = "atmel,24c32";
				pagesize = <32>;
				reg = <0x53>;
			};
		};

		sfp_i2c0: i2c@2 { /* XGBE0 SFP */
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <2>;
		};

		sfp_i2c1: i2c@3 { /* XGBE1 SFP */
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <3>;
		};

		lvds_i2c: i2c@4 { /* LVDS I2C */
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <4>;
		};
	};
};

&smbus0 {
	status = "okay";
};

&smbus1 {
	status = "okay";
};

&spi {
	num-cs = <4>;

	cs-gpios = <0>;
	status = "okay";

};

&i2s {
	status = "okay";
	system-clock-frequency = <12000000>;
	#sound-dai-cells = <0>;
};

