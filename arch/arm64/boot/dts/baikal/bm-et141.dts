/*
 * Baikal-M ET141 board device tree (test version)
 *
 */

/dts-v1/;

#include "bm1000.dtsi"
#include <dt-bindings/net/realtek-phy-rtl8211f.h>
#include <dt-bindings/input/gpio-keys.h>
#include <dt-bindings/input/linux-event-codes.h>

/ {

	model = "Baikal Electronics Baikal-M ET141 board";
	compatible = "baikal,baikal-m";
	#address-cells = <2>;
	#size-cells = <2>;

	aliases {
		ethernet0 = &gmac0;
		ethernet1 = &gmac1;
	};

	chosen { };

	panel {
		compatible = "panel-lvds";
		width-mm = <223>;
		height-mm = <125>;
		data-mapping = "vesa-24";
		enable-gpios = <&porta 16 GPIO_ACTIVE_HIGH>;
		panel-timing {
		// 1920x1080 @60Hz
			clock-frequency = <148500000>;
			hactive = <1920>;
			vactive = <1080>;
			hsync-len = <44>;
			hfront-porch = <88>;
			hback-porch = <148>;
			vsync-len = <5>;
			vfront-porch = <4>;
			vback-porch = <36>;
		};
		port {
			#address-cells = <1>;
			#size-cells = <0>;
			panel0_lvds0: endpoint@0 {
				reg = <0>;
				remote-endpoint = <&vdu_lvds_out>;
			};
		};
	};

	sound {
		compatible = "simple-audio-card";
		simple-audio-card,name = "MITX-Sound-Card";
		simple-audio-card,bitclock-master = <&codec0>;
		simple-audio-card,frame-master = <&codec0>;
		simple-audio-card,widgets =
			"Microphone", "Mic Jack",
			"Headphone", "Headphones",
			"Speaker", "AUX Out",
			"Line", "Line In";
		simple-audio-card,routing =
			"Headphones", "RHP",
			"Headphones", "LHP",
			"AUX Out", "AUXOUT1",
			"AUX Out", "AUXOUT2",
			"L2", "Mic Jack",
			"R2", "Mic Jack",
			"LAUX", "Line In",
			"RAUX", "Line In";

		simple-audio-card,hp-det-gpio = <&porta 29 GPIO_ACTIVE_LOW>;
		simple-audio-card,mic-det-gpio = <&porta 28 GPIO_ACTIVE_LOW>;
		simple-audio-card,format = "i2s";

		simple-audio-card,cpu {
			sound-dai = <&i2s>;
		};
		codec0: simple-audio-card,codec {
			sound-dai = <&max9867 0>;
		};
	};

	gpio-keys {
		compatible = "gpio-keys";
		pwr {
			label = "PWR Button";
			linux,code = <116>;
			gpios = <&porta 16 GPIO_ACTIVE_LOW>;
			wakeup-source;
			wakeup-event-action = <EV_ACT_DEASSERTED>;
		};
	};
};

&uart0 {
	status = "okay";
};

&sata0 {
	status = "okay";
};

&sata1 {
	status = "okay";
};

&gmac0 {
	status = "okay";
};

&gmac1 {
	status = "okay";
};

&vdu0 {
	status = "okay";
	num-lanes = <1>;
	port {
		vdu_lvds_out: endpoint {
			remote-endpoint = <&panel0_lvds0>;
		};
	};

};

&gmac0 {
	status = "okay";
	snps,reset-delays-us = <10>, <10000>, <50000>;
	clk_csr = <0x3>;
	phy-mode = "rgmii-rxid";
	phy-handle = <&gmac0_phy>;
};

&mdio0 {
	gmac0_phy: ethernet-phy@3 {
		compatible = "ethernet-phy-id001c.c916", "ethernet-phy-ieee802.3-c22";
		reg = <0x3>;
		realtek,led-mode = <RTL8211F_LED_MODE_B>;
		realtek,led0-control = <RTL8211F_LINK10_100_1000>;
		realtek,led1-control = <RTL8211F_LINK10_ACT>;
	};
};

&gmac1 {
	status = "okay";
	snps,reset-delays-us = <10>, <10000>, <50000>;
	clk_csr = <0x3>;
	phy-mode = "rgmii-rxid";
	phy-handle = <&gmac1_phy>;
};

&mdio1 {
	gmac1_phy: ethernet-phy@3 {
		compatible = "ethernet-phy-id001c.c916", "ethernet-phy-ieee802.3-c22";
		reg = <0x3>;
		realtek,led-mode = <RTL8211F_LED_MODE_B>;
		realtek,led0-control = <RTL8211F_LINK10_100_1000>;
		realtek,led1-control = <RTL8211F_LINK10_ACT>;
	};
};

&hdmi {
	status = "okay";
};

&vdu1 {
	status = "okay";
};

&vdec {
	status = "okay";
};

&gpio32 {
	status = "okay";
};

&usb2 {
	status = "okay";
};

&usb3 {
	status = "okay";
};

&pcie0 {
	status = "okay";
	reset-gpios = <&porta 10 GPIO_ACTIVE_LOW>;
};

&pcie1 {
	status = "okay";
	reset-gpios = <&porta 19 GPIO_ACTIVE_LOW>;
};

&pcie2 {
	status = "okay";
	reset-gpios = <&porta 6 GPIO_ACTIVE_LOW>;
};

&timer1 {
	status = "okay";
};

&timer2 {
	status = "okay";
};

&timer3 {
	status = "okay";
};

&timer4 {
	status = "okay";
};

&pvt_cluster0 {
	status = "okay";
};

&pvt_cluster1 {
	status = "okay";
};

&pvt_cluster2 {
	status = "okay";
};

&pvt_cluster3 {
	status = "okay";
};

&pvt_mali {
	status = "okay";
};

&i2c0 {
	status = "okay";

	bmc@8 {
		compatible = "tp,mitx2-bmc", "t-platforms,mitx2-bmc";
		reg = <0x08>;
	};

	max9867: max9867@18 {
		compatible = "maxim,max9867";
		#sound-dai-cells = <1>;
		reg = <0x1a>;
	};

	gpio@50 {
		compatible = "nxp,pca9670";
		#gpio-cells = <2>;
		gpio-controller;
		reg = <0x50>;
	};

	rtc@51 {
		compatible = "nxp,pcf2129", "nxp,pcf2127";
		reg = <0x51>;
	};

	eeprom@53 {
		compatible = "atmel,24c32";
		pagesize = <32>;
		reg = <0x53>;
	};
};

&smbus0 {
	status = "okay";
};

&smbus1 {
	status = "okay";
};

&spi0 {
	num-cs = <4>;

	cs-gpios = <0>;
	status = "okay";

};

&i2s {
	status = "okay";
	system-clock-frequency = <12000000>;
	#sound-dai-cells = <0>;
};

